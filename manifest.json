{
	"manifest_version": 2,

	"name": "Turtl",
	"description": "A bookmarking utility for the Turtl app (https://turtl.it)",
	"version": "0.1.0",
	"icons": {
		"16": "data/images/favicon.png",
		"128": "data/images/favicon.128.png"
	},
	"minimum_chrome_version": "28.0",

	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*"
	],

	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": [ "data/bookmark.scrape.js" ]
	}],

	"background": {
		"scripts": [
			"util.js",
			"main.js",
			"comm.js",
			"bookmark.js"
		],
		"persistent": false
	},

	"browser_action": {
		"default_icon": "data/images/favicon.19.png",
		"default_title": "Bookmark this page in Turtl"
	},

	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Down"
			}
		}
	}
}
